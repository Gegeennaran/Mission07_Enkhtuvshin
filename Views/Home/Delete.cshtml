@model WebApplication1.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h2 class="text-center text-danger">Are you sure you want to delete this movie?</h2>

<div class="container">
    <h4><strong>Title:</strong> @Model.Title</h4>
    <p><strong>Year:</strong> @Model.Year</p>
    <p><strong>Director:</strong> @Model.Director</p>
    <p><strong>Rating:</strong> @Model.Rating</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MovieId" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>