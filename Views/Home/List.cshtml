@{
    ViewData["Title"] = "Movies List";
}

@model IEnumerable<WebApplication1.Models.Movie>

<h2 class="text-center my-4">Movies List</h2>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
        <th>Category</th>
        <th>Title</th>
        <th>Year</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Lend To</th>
        <th>Copied To Plex</th>
        <th>Notes</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@(movie.Category != null ? movie.Category.CategoryName : "N/A")</td>
            <td>@movie.Title</td>
            <td>@movie.Year</td>
            <td>@movie.Director</td>
            <td>@movie.Rating</td>
            <td>@(movie.Edited ? "Yes" : "No")</td>
            <td>@movie.LentTo</td>
            <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
            <td>@movie.Notes</td>
            <td>
                <a asp-action="Edit" asp-route-MovieId="@movie.MovieId" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-MovieId="@movie.MovieId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>